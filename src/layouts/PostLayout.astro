---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: string;
  words?: string;
  tags?: string[];
  activeNav?: string;
}

const { title, date, words, tags = [], activeNav = 'time' } = Astro.props;
---

<BaseLayout title={`Post | ${title}`} activeNav={activeNav}>
    <!-- 返回按钮喵 -->
    <a href="/time" class="back-button" title="返回时光页">
        <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
    </a>

    <header class="post-header">
        <h1 class="post-title">{title}</h1>
        
        <div class="post-meta">
            <span class="meta-item">{date}</span>
            {words && <span class="meta-item">{words} Words</span>}
            
            {tags.length > 0 && (
                <div class="tags-container">
                    {tags.map(tag => (
                        <a href={`/tags/${tag}`} class="tag">{tag}</a>
                    ))}
                </div>
            )}
        </div>
    </header>

    <div class="article-container">
        <article class="article-content">
            <slot />
        </article>

        <!-- 右侧悬浮目录 (Catalog) -->
        <aside class="toc-sidebar">
            <div class="toc-title">Catalog / 目录</div>
            <slot name="toc" />
        </aside>
    </div>

    <!-- 底部导航 -->
    <div class="post-navigation">
        <slot name="navigation" />
    </div>

    <div style="height: 100px;"></div>
</BaseLayout>

<style is:global>
    /* 返回按钮样式喵 */
    .back-button {
        position: absolute;
        top: 20px;
        left: 20px;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--col-4-dark);
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        z-index: 100;
        box-shadow: 0 4px 15px rgba(118, 159, 205, 0.1);
    }

    .back-button:hover {
        transform: scale(1.1);
        background: rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 25px rgba(118, 159, 205, 0.2);
        color: var(--text-main);
    }

    /* 文章专用样式 */
    .post-header {
        margin-top: 20px;
        margin-bottom: 40px;
        border-bottom: 1px dashed var(--col-3-medium);
        padding-bottom: 30px;
    }

    .post-title {
        font-size: 2.4rem;
        color: var(--text-main);
        margin-bottom: 20px;
        line-height: 1.3;
        text-shadow: 0 2px 10px rgba(255, 255, 255, 0.6);
    }

    .post-meta {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        font-size: 0.85rem; 
        color: #90A4AE;
        letter-spacing: 0.5px;
    }
    
    .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .tags-container {
        display: flex;
        gap: 12px;
        margin-left: 15px; 
    }

    .article-container {
        display: flex;
        gap: 60px; 
        align-items: flex-start;
    }

    .article-content {
        flex: 1; 
        min-width: 0;
        font-size: 1.05rem;
        color: #4a5a6a;
        text-align: justify;
    }

    /* --- 纯净版分割线样式喵 --- */
    .article-content hr {
        border: none;
        border-top: 1px dashed var(--col-3-medium);
        margin: 2.5rem 0;
        opacity: 0.8;
    }

    .article-content h2 {
        font-size: 1.6rem;
        margin-top: 40px;
        margin-bottom: 20px;
        color: var(--text-main);
        position: relative;
        padding-left: 15px;
    }

    .article-content h2::before {
        content: '';
        position: absolute; left: 0; top: 5px; bottom: 5px;
        width: 4px; background: var(--col-4-dark);
        border-radius: 2px;
    }

    .article-content h3 {
        font-size: 1.3rem;
        margin-top: 30px;
        margin-bottom: 15px;
        color: var(--text-main);
    }

    .article-content p { margin-bottom: 20px; }

    .article-content img {
        max-width: 100%;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(118, 159, 205, 0.15);
        margin: 20px 0;
        border: 4px solid rgba(255,255,255,0.5);
    }

    /* TOC 样式 */
    .toc-sidebar {
        width: 180px; 
        position: sticky;
        top: 40px; 
        flex-shrink: 0;
        padding-left: 20px; 
        background: transparent; 
        border: none;
        box-shadow: none;
    }

    .toc-title {
        font-size: 0.85rem;
        font-weight: bold;
        color: var(--text-light);
        margin-bottom: 15px;
        letter-spacing: 1px;
        text-transform: uppercase;
        opacity: 0.8;
    }

    .toc-list { list-style: none; }
    .toc-list li { margin-bottom: 10px; }

    .toc-link {
        color: var(--text-light);
        font-size: 0.9rem;
        transition: all 0.2s;
        display: block;
        border-radius: 4px;
        padding: 2px 0;
    }

    .toc-link:hover, .toc-link.active {
        color: var(--col-4-dark);
        font-weight: bold;
    }

    /* 底部导航 */
    .post-navigation {
        margin-top: 80px;
        padding-top: 30px;
        border-top: 1px dashed var(--col-3-medium);
        display: flex;
        justify-content: space-between;
        gap: 20px;
    }

    .nav-link {
        display: flex;
        flex-direction: column;
        max-width: 45%;
        transition: transform 0.3s;
    }

    .nav-link:hover { transform: translateY(-3px); }

    .nav-label {
        font-size: 0.8rem;
        color: var(--text-light);
        margin-bottom: 5px;
        font-family: monospace;
    }

    .nav-title {
        font-size: 1.1rem;
        color: var(--col-4-dark);
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .nav-link.next { align-items: flex-end; text-align: right; }
    .nav-link.prev { align-items: flex-start; text-align: left; }

    @media (max-width: 1000px) {
        .toc-sidebar { display: none; } 
        .article-container { display: block; }
    }

    @media (max-width: 768px) {
        .post-title { font-size: 1.8rem; }
        .tags-container { margin-left: 0; margin-top: 10px; width: 100%; }
        .back-button { top: 10px; left: 10px; width: 35px; height: 35px; }
    }
</style>
